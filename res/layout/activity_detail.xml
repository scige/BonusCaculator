<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:background="#EEE"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" >
    
    <RelativeLayout 
		android:layout_width="fill_parent"
		android:layout_height="45dp"
		android:id="@+id/title" 
		android:background="@drawable/title_bar"
		android:gravity="center_vertical"  >  
    	<TextView
      		android:layout_width="wrap_content" 
      		android:layout_height="wrap_content" 
      		android:layout_centerInParent="true"
      		android:text="详细信息"
      		android:textSize="20sp"		
			android:textColor="#ffffff" /> 
		<Button
		    android:id="@+id/resetButton"
		    android:background="@drawable/title_btn_back"
	    	android:layout_width="67dp"
      		android:layout_height="wrap_content"
      		android:layout_alignParentLeft="true" 
      		android:layout_centerVertical="true"
      		android:layout_marginLeft="5dp"
      		android:text="返回"
      		android:textColor="#fff"
      		android:textSize="15dp"
            android:onClick="backButton_Clicked" />
	</RelativeLayout>
    
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="10.0dip"
        android:paddingTop="13.0dip"
        android:paddingRight="10.0dip"
        android:layout_marginTop="18.0dip"
        android:layout_marginBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:focusable="true"
            android:descendantFocusability="afterDescendants"
            android:paddingLeft="13.0dip"
            android:paddingRight="13.0dip"
            android:layout_width="fill_parent"
            android:layout_height="46.0dip">
            <TextView
                android:layout_gravity="center"
                android:textSize="18sp"
        		android:textColor="#555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名" />
            <TextView
                android:id = "@+id/nameText"
                android:gravity="left"
                android:layout_gravity="center"
                android:textSize="18sp"
        		android:textColor="#555"
                android:paddingRight="22.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22.0dip" />
        </LinearLayout>
        <LinearLayout
            android:focusable="true"
            android:descendantFocusability="afterDescendants"
            android:paddingLeft="13.0dip"
            android:paddingRight="13.0dip"
            android:layout_width="fill_parent"
            android:layout_height="46.0dip">
            <TextView
                android:layout_gravity="center"
                android:textSize="18sp"
        		android:textColor="#555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="业绩" />
            <TextView
                android:id = "@+id/incomeText"
                android:gravity="left"
                android:layout_gravity="center"
                android:textSize="18sp"
        		android:textColor="#555"
                android:paddingRight="22.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22.0dip" />
        </LinearLayout>
        <LinearLayout
            android:focusable="true"
            android:descendantFocusability="afterDescendants"
            android:paddingLeft="13.0dip"
            android:paddingRight="13.0dip"
            android:layout_width="fill_parent"
            android:layout_height="46.0dip">
            <TextView
                android:layout_gravity="center"
                android:textSize="18sp"
        		android:textColor="#555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="奖金" />
            <TextView
                android:id = "@+id/bonusText"
                android:gravity="left"
                android:layout_gravity="center"
                android:textSize="18sp"
        		android:textColor="#555"
                android:paddingRight="22.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22.0dip" />
        </LinearLayout>
        <LinearLayout
            android:focusable="true"
            android:descendantFocusability="afterDescendants"
            android:paddingLeft="13.0dip"
            android:paddingRight="13.0dip"
            android:layout_width="fill_parent"
            android:layout_height="46.0dip">
            <TextView
                android:layout_gravity="center"
                android:textSize="18sp"
        		android:textColor="#555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话" />
            <TextView
                android:id = "@+id/phoneText"
                android:gravity="left"
                android:layout_gravity="center"
                android:textSize="18sp"
        		android:textColor="#555"
                android:paddingRight="22.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22.0dip" />
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:focusable="true"
        android:descendantFocusability="afterDescendants"
        android:paddingLeft="13.0dip"
        android:paddingRight="13.0dip"
        android:layout_width="fill_parent"
        android:layout_height="46.0dip">
        <Button
            android:id = "@+id/editPerson"
            android:layout_weight="1"
	        android:background="@drawable/btn_style_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="editPerson_Clicked"
		    android:textColor="#000"
		    android:textSize="16sp"
            android:text="修改" />
        <Button
            android:id = "@+id/removePerson"
            android:layout_weight="1"
	        android:background="@drawable/btn_style_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="removePerson_Clicked"
		    android:textColor="#000"
		    android:textSize="16sp"
            android:text="删除" />
    </LinearLayout>
    
</LinearLayout>